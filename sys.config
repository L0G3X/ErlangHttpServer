[
  {lager,[
    {colored, true},
    {async_threshold,1000},
    {error_logger_redirect, false},
    {crash_log, "log/mytcg_crash.log"},
    {handlers,[
      {lager_console_backend, info},
      {lager_file_backend,[
        {formatter_config, ["[",date," ",time,"]",node,"[",severity,"]",message,"\n"]},
        {file, "log/mytcg_info.log"},
        {level,info},
        {size,104857600},
        {date,"$D0"},
        {count, 30}
      ]},
      {lager_file_backend,[
        {formatter_config,[date," ", time, " ", pid, " [",severity,"] ",message,"\n"]},
        {file, "log/mytcg_error.log"},
        {level, error},
        {size, 104857600},
        {date, "$D0"},
        {count, 30}
      ]}
    ]}
  ]}
].